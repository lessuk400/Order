<div id="flash">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
</div>
<%= simple_form_for @order.order do |f| %>
  <%= f.object.errors[:meal].first %>
  <%= f.fields_for :order_meals do |o_m_f| %>
    <%= o_m_f.input :meal_id, collection: o_m_f.object.related_food_items,
                    input_html: { class: 'choose-item' } %>
  <% end %>
  <%= f.submit %>
<% end %>
